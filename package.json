{
  "name": "create-typescript-npm-library",
  "description": "Simple typescript app with jest to create a npm library with types",
  "version": "1.0.2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint src --ext .ts",
    "clear": "rmdir /s \"dist\"",
    "build": "tsc && tsc-alias",
    "start": "npm run build && node dist/main.js",
    "watch": "nodemon",
    "test": "jest",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "pub": "npm run build && npm version patch && npm publish"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.30.0",
    "jest": "^29.3.1",
    "jest-junit": "^15.0.0",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TheSmartMonkey/create-typescript-npm-library/issues"
  },
  "homepage": "https://github.com/TheSmartMonkey/create-typescript-npm-library#readme",
  "keywords": [
    "npm",
    "library",
    "template",
    "typescript"
  ]
}
